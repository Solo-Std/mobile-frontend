<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ongoing_card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_weight="1">
                <TableRow>
                    <TextView
                        android:id="@+id/text_ongoingrequest_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="PR-20180400043"/>
                    <TextView
                        android:id="@+id/text_ongoingrequest_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="STOCK"
                        android:textStyle="bold"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/text_ongoingrequest_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="edwin"/>
                    <TextView
                        android:id="@+id/text_ongoingrequest_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="20-04-2018"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/text_ongoingrequest_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Rp. 3.500.000,00"
                        android:textSize="22dp"/>
                </TableRow>

                <!--<TableRow>-->
                <!--<ListView-->
                <!--android:id="@+id/list_request_item"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content">-->

                <!--</ListView>-->
                <!--</TableRow>-->
            </TableLayout>
        </TableRow>

        <TableRow>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <TableRow
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp">
                    <TextView
                        android:id="@+id/text_approval_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_margin="5dp"
                        android:text="  DH   "
                        />
                    <TextView
                        android:id="@+id/text_approval_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity=""
                        android:layout_margin="5dp"
                        android:text="  PM   "
                        />
                    <TextView
                        android:id="@+id/text_approval_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_margin="5dp"
                        android:text="  FC   "
                        />
                    <TextView
                        android:id="@+id/text_approval_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_margin="5dp"
                        android:text="   GM  "
                        />
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <TableRow
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/text_approval_box_1"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:gravity="left"
                        android:layout_margin="5dp"
                        android:text="       "
                        android:background="#adff2f"
                        />
                    <TextView
                        android:id="@+id/text_approval_box_2"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="2"
                        android:gravity=""
                        android:layout_margin="5dp"
                        android:text="       "
                        android:background="#7fFF00"
                        />
                    <TextView
                        android:id="@+id/text_approval_box_3"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_margin="5dp"
                        android:text="       "
                        android:background="#41FF30"
                        />
                    <TextView
                        android:id="@+id/text_approval_box_4"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_margin="5dp"
                        android:text="       "
                        android:background="#00ff00"
                        />
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableRow>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:layout_weight="1">
                <TableRow>
                    <Button
                        android:id="@+id/button_approve"
                        style="@style/Base.Widget.AppCompat.Button.Colored"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@color/colorPrimary"
                        android:text="APPROVE"/>
                    <Button
                        android:id="@+id/button_reject"
                        style="@style/Base.Widget.AppCompat.Button.Colored"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="REJECT"
                        android:background="@color/colorAccent"
                        android:textAlignment="center"/>
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>

</android.support.v7.widget.CardView>